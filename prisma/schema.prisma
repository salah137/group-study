
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("db")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  password  String
  email     String     @unique
  language  String
  study     String
  interests String
  profile String
  groups    Group[]
  message   Message[]
}

model GroupUser {
  id     Int  @id @default(autoincrement())
  userId Int  
  groupId Int
}

model Group {
  id     Int    @id @default(autoincrement())
  userId Int
  profile String
  topic String
  User   User[]
}

model Message {
  id     Int    @id @default(autoincrement())
  userId Int
  text String
  time DateTime @default(now())
  content String
  User   User[]
}
